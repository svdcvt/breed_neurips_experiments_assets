{
    "server_filename": "apebench_server.py",
    "server_class": "BaseAPEBenchServer",
    "output_dir": "STUDY_OUT",
    "study_options": {
        "field_names": [
            "preposition",
            "position"
        ],
        "parameter_sweep_size": 10,
        "nb_time_steps": 100,
        "nb_parameters": 1,
        "lower_bounds": [0.1],
        "upper_bounds": [2.0],
        "seed": 1234,
        "simulation_timeout": 600,
        "crashes_before_redraw": 1,
        "verbosity": 2
    },
    "sampler_type": "uniform",
    "active_sampling_config": {
        "nn_updates": 256,
        "non_resampling_threshold": 50,
        "breed_params": {
            "non_breed_sampling_strategy": "random",
            "sigma": 1.0,
            "start": 0.5,
            "end": 0.9,
            "breakpoint": 5,
            "sliding_window_size": 200
        }
    },
    "dl_config": {
        "nb_batches_update": 100,
        "batch_size": 16,  
        "per_server_watermark": 300,
        "buffer_size": 1000,
        "buffer": "Reservoir",
        "convert_log_to_df": true
    },
    "launcher_config": {
        "scheduler": "openmpi",
        "scheduler_arg_client": ["-n", "1","--timeout", "600", "--bind-to", "none"],
        "scheduler_arg_server": ["-n", "1","--timeout", "10800"],
        "fault_tolerance": false,
        "job_limit": 6,
        "timer_delay": 1,
        "verbosity": 2
    },
    "client_config": {
        "executable_command": "advection1d_solver.py",
        "command_default_args": [
            "--domain-extent=1.0",
            "--num-points=100",
            "--dt=0.01"
        ],
        "preprocessing_commands": []
    },
    "server_config": {
        "preprocessing_commands": []
    }
}
