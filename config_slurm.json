{
    "server_filename": "$APEBENCH_ROOT/apebench_server.py",
    "server_class": "BaseAPEBenchServer",
    "output_dir": "STUDY_OUT",
    "study_options": {
        "advection": {
            "nb_dims": 1,
            "domain_extent": 2.0,
            "nb_points": 1000,
            "dt": 0.1,
            "velocity": 1.0
        },
        "field_names": [
            "preposition",
            "position"
        ],
        "parameter_sweep_size": 200,
        "nb_time_steps": 100,
        "nb_parameters": 2,
        "seed": 1234,
        "simulation_timeout": 60,
        "crashes_before_redraw": 1,
        "verbosity": 2
    },
    "sampler_type": "uniform",
    "active_sampling_config": {
        "nn_updates": -1,
        "non_resampling_threshold": 50,
        "breed_params": {
            "non_breed_sampling_strategy": "random",
            "sigma": 1.0,
            "start": 0.5,
            "end": 0.9,
            "breakpoint": 5,
            "sliding_window_size": 200
        }
    },
    "dl_config": {
        "width_size": 64,
        "depth": 3,
        "lr": 1e-4,
        "nb_batches_update": 100,
        "batch_size": 128, 
        "per_server_watermark": 1500,
        "buffer_size": 2000,
        "buffer": "Reservoir",
        "convert_log_to_df": true
    },
    "launcher_config": {
        "scheduler": "slurm-semiglobal",
        "scheduler_arg_server": [
            "--qos=qos_gpu-dev",
            "--account=igf@v100",
            "--nodes=1",
            "--ntasks=1",
            "--gres=gpu:1",
            "--cpus-per-task=10",
            "--threads-per-core=1",
            "--hint=nomultithread",
            "--time=00:10:00"
        ],
        "scheduler_arg_client": [
            "--account=igf@cpu",
            "--nodes=1",
            "--ntasks=1",
            "--time=00:01:00",
            "--exclusive"
        ],
        "job_limit": 21,
        "server_timeout": 60,
        "timer_delay": 3,
        "fault_tolerance": false,
        "verbosity": 2,
        "std_output": true,
        "http_port": 8888
    },
    "client_config": {
        "executable_command": "$APEBENCH_ROOT/advection_solver.py",
        "command_default_args": [],
        "preprocessing_commands": [
            "module load zeromq openmpi/4.1.5 python/3.10.4 cudnn/9.2.0.82-cuda"
        ]
    },
    "server_config": {
        "preprocessing_commands": [
            "module load zeromq openmpi/4.1.5 python/3.10.4 cudnn/9.2.0.82-cuda"
        ]
    }
}
