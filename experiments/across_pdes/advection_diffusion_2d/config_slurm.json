{
    "server_filename": "$APEBENCH_ROOT/test/common/apebench_server.py",
    "server_class": "APEBenchServer",
    "output_dir": "STUDY_OUT_adv_diff_2d_uniform",
    "ignore_client_death": true,
    "study_options": {
        "scenario_config": {
            "scenario_name": "diff_adv_diff",
            "ic_config": "sine_cos_2d;<amp>;<phs>",
            "network_config": "Conv;34;6;relu",
            "num_spatial_dims": 2,
            "num_points": 160
        },
        "field_names": [
            "preposition",
            "position"
        ],
        "parameter_sweep_size": 100,
        "nb_time_steps": 100,
        "nb_parameters": 2,
        "l_bounds": [-1.0, 0.0],
        "u_bounds": [1.0, "2 * np.pi"],
        "seed": 1234,
        "simulation_timeout": 60,
        "crashes_before_redraw": 1,
        "verbosity": 2
    },
    "sampler_type": "uniform",
    "active_sampling_config": {
        "skip_nb_batches": 500,
        "nn_updates": -1,
        "non_resampling_threshold": 10,
        "breed_params": {
            "non_breed_sampling_strategy": "random",
            "sigma": [0.5, 1.0],
            "start": 0.3,
            "end": 0.9,
            "breakpoint": 5,
            "sliding_window_size": 100
        }
    },
    "dl_config": {
        "validation_directory": "$APEBENCH_ROOT/test/advection_diffusion_2d/VALIDATION_OUT_2d_adv_diff/trajectories",
        "valid_batch_size": 10,
        "nb_batches_update": 50,
        "batch_size": 128, 
        "per_server_watermark": 800,
        "buffer_size": 2000,
        "buffer": "Reservoir",
        "convert_log_to_df": true
    },
    "launcher_config": {
        "scheduler": "slurm-semiglobal",
        "scheduler_arg_server": [
            "--qos=qos_gpu-dev",
            "--account=igf@v100",
            "-C v100-32g",
            "--nodes=1",
            "--ntasks=1",
            "--gres=gpu:1",
            "--cpus-per-task=10",
            "--threads-per-core=1",
            "--hint=nomultithread",
            "--time=00:10:00"
        ],
        "scheduler_arg_client": [
            "--account=igf@cpu",
            "--nodes=1",
            "--ntasks=1",
            "--time=00:01:00",
            "--exclusive"
        ],
        "job_limit": 21,
        "server_timeout": 60,
        "timer_delay": 10,
        "fault_tolerance": false,
        "verbosity": 2,
        "std_output": true,
        "http_port": 8898
    },
    "client_config": {
        "executable_command": "$APEBENCH_ROOT/test/common/solver.py",
        "command_default_args": [],
        "preprocessing_commands": [
            "module load zeromq openmpi/4.1.5 python/3.10.4 cudnn/9.2.0.82-cuda",
            "export CONFIG_FILE=config_slurm.json",
            "export JAX_PLATFORMS=cpu"
        ]
    },
    "server_config": {
        "preprocessing_commands": [
            "module load zeromq openmpi/4.1.5 python/3.10.4 cudnn/9.2.0.82-cuda",
            "module load nccl/2.21.5-1-cuda",
            "nvidia-smi"
        ]
    }
}
