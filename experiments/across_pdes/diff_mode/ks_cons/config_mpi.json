{
    "server_filename": "$APEBENCH_ROOT/common/apebench_server.py",
    "server_class": "APEBenchServer",
    "output_dir": "STUDY_OUT_resnet_26_4_uniform",
    "ignore_client_death": true,
    "study_options": {
        "scenario_config": {
            "scenario_name": "diff_ks_cons",
            "ic_config": "sine_sup;<amp1>;<phs1>;<amp2>;<phs2>;false;true",
            "network_config": "Res;26;4;relu",
            "optim_config": "adam;warmup_cosine;1e-3;1e-3;0.1",
            "num_points": 800000,
            "diffusion_gamma": -5.0e+7,
            // -2 * 5000 ^ 2
            "hyp_diffusion_gamma": -1.0e+16,
            // -16 * 5000 ^ 4  
            "convection_delta": -5000.0
            // -1 * 5000

        },
        "field_names": [
            "preposition",
            "position"
        ],
        "parameter_sweep_size": 300,
        "nb_time_steps": 50,
        "nb_parameters": 4,
        "l_bounds": [-0.7, 0.0, -0.7, 0.0],
        "u_bounds": [0.7, "2 * np.pi", 0.7, "2 * np.pi"],
        "seed": 1234,
        "simulation_timeout": 60,
        "crashes_before_redraw": 1,
        "zmq_hwm": 50,
        "verbosity": 2
    },
    "active_sampling_config": {
        // each X batches resampling is triggered
        "nn_updates": 30,
        // the threshold for the first resampling
        "min_nb_finished_simulations": 20,
        // the threshold for bein a parent
        "delta_loss_min_nb_time_steps": 20,
        // when to stop resampling
        "non_resampling_threshold": 1,
        "breed_params": {
            "non_breed_sampling_strategy": "random",
            "sigma": [0.05, 0.2, 0.05, 0.2],
            "start": 0.001,
            "end": 0.001,
            "breakpoint": 3,
            "sliding_window_size": 50,
            "use_true_mixing": true,
            "log_extra": false
        }
    },
    "dl_config": {
        "validation_directory": "/bettik/PROJECTS/pr-melissa/COMMON/datasets/apebench_val/ks_cons_1d/800k_2waves_medium/trajectories",
        "validation_file": "all_trajectories.npy",
        "valid_rollout": 100,
        "valid_batch_size": 16,
        "valid_nb_time_steps": 100,
        "nb_batches_update": 50,
        "batch_size": 16,
        // 20 simulations
        "per_server_watermark": 100,
        // ~25% of the sweep size
        "buffer_size": 4000,
        "buffer": "Reservoir",
        "convert_log_to_df": false
    },
    "launcher_config": {
        "scheduler": "openmpi",
        "scheduler_arg_server": ["-n", "2", "--oversubscribe", "--timeout", "1800"],
        "scheduler_arg_client": ["-n", "1", "--oversubscribe"],
        "job_limit": 18,
        "server_timeout": 1800,
        "timer_delay": 10,
        "fault_tolerance": false,
        "verbosity": 2,
        "std_output": true,
        "http_port": 1890
    },
    "client_config": {
        "executable_command": "$APEBENCH_ROOT/common/solver.py",
        "command_default_args": [],
        "preprocessing_commands": [
            "export CONFIG_FILE=config_mpi.json",
	    "export JAX_PLATFORMS=cpu"
        ]
    },
    "server_config": {
        "preprocessing_commands": [
        "export XLA_PYTHON_CLIENT_MEM_FRACTION=0.9"
        ]
    },
    "monitoring_config": {
        "log_memory": "tb",
        "plotting_config": {
            "plot_rows" : 5
        },
        "checkpoint_model_best": true,
        "checkpoint_model_last": true,
        "checkpoint_model_each_step": false
    }
}
